rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Canvas collection rules
    match /canvas/{canvasId} {
      // Allow authenticated users to read and write to any canvas document
      allow read, write: if request.auth != null;
      
      // Shapes subcollection rules (NEW: individual shape documents)
      match /shapes/{shapeId} {
        // Allow authenticated users to read and write individual shapes
        allow read, write: if request.auth != null;
      }
    }
    
    // Default: deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}

